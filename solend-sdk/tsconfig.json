{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "declaration": true,
    "allowJs": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "typeRoots": ["./types", "./node_modules/@types"],
    // "sourceMap": true,
    "inlineSourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/experimental/*"]
}
